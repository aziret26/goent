<?xml version="1.0" encoding="utf-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="hibernate-test" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>kg.goent.model.User</class>
        <class>kg.goent.model.Segment</class>
        <class>kg.goent.model.SegmentType</class>
        <class>kg.goent.model.UserStatus</class>
        <class>kg.goent.model.UserType</class>
        <class>kg.goent.model.Project</class>
        <class>kg.goent.model.Bmc</class>
        <class>kg.goent.model.SegmentContainer</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/goent" />
            <property name="javax.persistence.jdbc.user" value="goent" />
            <property name="javax.persistence.jdbc.password" value="goent" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.connection.shutdown" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
    </persistence-unit>



</persistence>